{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --no-frozen-lockfile --filter @raverpay/raverpay-web && pnpm --filter @raverpay/raverpay-web build"
  },
  "deploy": {
    "startCommand": "pnpm --filter @raverpay/raverpay-web start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
